<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.AltaCliente1">
    <ScrollView >

        <StackLayout Padding="20">

            <Label Text="Alta Nuevo Cliente" Font="25" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" />

            <Label  Text="Rut: *" TextColor="#000000"></Label>
            <Label  x:Name="lblRut" TextColor="#000000"></Label>
            <Label></Label>
            <Label Text="Nombre Empresa: *" TextColor="#000000"></Label>
            <Entry x:Name="lblNombreEmp"  Placeholder="Nombre Empresa" TextColor="#000000"></Entry>
            <Label></Label>
            <Label  Text="Dirección: *" TextColor="#000000"></Label>
            <Entry x:Name="lblDireccion" Placeholder="Dirección"></Entry>
            <Label></Label>
            <Label  Text="Teléfono: *" TextColor="#000000" ></Label>
            <Entry x:Name="lblTelefono" Placeholder="Teléfono" Keyboard="Telephone"></Entry>
            <Label></Label>
            <Label  Text="Ciudad: *" TextColor="#000000"></Label>
            <Entry x:Name="lblCiudad" Placeholder="Ciudad"></Entry>
            <Label></Label>
            <Button x:Name="btnSiguiente" Text="Siguiente"></Button>
            <Button x:Name="btnCancelar" Text="Cancelar"></Button>


        </StackLayout>
    </ScrollView>
</ContentPage>