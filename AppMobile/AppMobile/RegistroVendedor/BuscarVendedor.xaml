<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.RegistroVendedor.BuscarVendedor">
    <ScrollView>

        <StackLayout Padding="20">

            <Label Text="Registro Usuario" Font="25" TextColor="Black" HorizontalOptions="Center" />
            <Label></Label>

            <Label Text="Nickname:" TextColor="#000000" ></Label>
            <Label Text="Usuario con el cual ingresará al sistema" TextColor="Gray" Font="7" ></Label>
            <Entry x:Name="lblNickName" Placeholder="Usuario" TextColor="#000000"></Entry>
            <ActivityIndicator x:Name="activityIndicator" IsRunning="False" Color="Blue" VerticalOptions="StartAndExpand" IsVisible="False" />            
                       
            <Button x:Name="btnBuscar" Text="Ingresar"></Button>
           

        </StackLayout>
    </ScrollView>
</ContentPage>