<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.ProductoEncontrado">
    <ScrollView >

        <StackLayout Padding="20">

            <Label Text="Artículo Encontrado" Font="25" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" />
            <Label></Label>

            <Label Text="Código:" TextColor="#000000"></Label>
            <Label x:Name="lblCodigo"  TextColor="#7B7776"/>

            <Label></Label>
            <Label Text="Nombre:" TextColor="#000000"></Label>
            <Label x:Name="lblNombre"  TextColor="#7B7776"/>

            <Label></Label>
            <Label Text="Descripción:" TextColor="#000000"></Label>
            <Label x:Name="lblDescripcion"  TextColor="#7B7776"/>

            <Label></Label>
            

            <Button x:Name="btnBuscarOtroProducto" Text="Buscar otro artículo"></Button>
            <Button x:Name="btnInicio" Text="Inicio"></Button>

        </StackLayout>
    </ScrollView>
</ContentPage>