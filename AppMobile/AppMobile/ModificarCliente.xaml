<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile.ModificarCliente">

    <ScrollView>

        <StackLayout Padding="20">

            <Label Text="Modificar Cliente" Font="25" TextColor="Red" HorizontalOptions="Center" />

            <Label  Text="Rut: *" TextColor="#000000"></Label>
            <Label  x:Name="pRut" TextColor="#000000"></Label>
            <Label></Label>
            <Label Text="Nombre Empresa: *" TextColor="#000000"></Label>
            <Entry x:Name="pNombreEmp"  Placeholder="Nombre Empresa" TextColor="#000000"></Entry>
            <Label></Label>
            <Label  Text="Direccion: *" TextColor="#000000"></Label>
            <Entry x:Name="pDireccion" Placeholder="Direccion"></Entry>
            <Label></Label>
            <Label  Text="Telefono: " TextColor="#000000" ></Label>
            <Entry x:Name="pTelefono" Placeholder="Telefono" Keyboard="Telephone"></Entry>
            <Label></Label>
            <Label  Text="Ciudad: *" TextColor="#000000"></Label>
            <Entry x:Name="pCiudad" Placeholder="Ciudad"></Entry>
            <Label></Label>
            <Button x:Name="btnConfirmar" Text="Confirmar"></Button>
            <Button x:Name="btnCancelar" Text="Cancelar"></Button>


        </StackLayout>
    </ScrollView>
</ContentPage>